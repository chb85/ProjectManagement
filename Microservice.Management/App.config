<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, nlog"/>
    <section name="microserviceConfiguration" type="Microservice.Common.Configuration.ServiceConfigurationSection, 
             Microservice.Common"/>
  </configSections>
  
  <appSettings>
    <add key="BaseUrl.Management" value="http://0.0.0.0:9000"/>
  </appSettings>
  
  <microserviceConfiguration>
   <services>
     <service name="CustomerService" assambly="Microservice.CustomerManagement">
        <hostConfiguration baseUrl="http://0.0.0.0:9001" startupType="Microservice.CustomerManagement.IPC.CustomerServiceStartup"/>
        <dataStore startupType="Microservice.CustomerManagement.Bootstrap.NhibernateConfigurator" 
                   connection=""/>
      </service>
    </services>
  </microserviceConfiguration>    
 
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="logfile" xsi:type="File" fileName="c:\temp\prjectmmanagement.log" />
      <target name="logconsole" xsi:type="Console" />
    </targets>

    <rules>
      <logger name="*" minlevel="Trace" writeTo="logconsole" />
      <logger name="*" minlevel="Trace" writeTo="logfile" />
    </rules>
  </nlog>
</configuration>